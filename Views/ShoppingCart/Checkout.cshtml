@model PhanVuBaoMinh.Models.Order
@{
    ViewData["Title"] = "Thanh Toán";
    Layout = "~/Views/Shared/_StoreLayout.cshtml"; // Sử dụng layout công khai
}

<h2>Thanh Toán</h2>

<form asp-action="Checkout" method="post">
    <div class="form-group">
        <label asp-for="ShippingAddress">Địa Chỉ Giao Hàng</label>
        <input asp-for="ShippingAddress" class="form-control" />
        <span asp-validation-for="ShippingAddress" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Notes">Ghi Chú</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Đặt Hàng</button>
    <a asp-action="Index" class="btn btn-secondary">Quay Lại Giỏ Hàng</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}