@model PhanVuBaoMinh.Models.Product
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<h2>@Model.Name</h2>

<div class="row">
    <div class="col-md-6">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="Ảnh sản phẩm" class="img-fluid mb-3 rounded shadow" style="max-height: 300px;" />
        }
    </div>
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Tên sản phẩm:</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">Giá:</dt>
            <dd class="col-sm-8">@String.Format("{0:N0} VND", Model.Price)</dd>

            <dt class="col-sm-4">Mô tả:</dt>
            <dd class="col-sm-8">@Model.Description</dd>

            <dt class="col-sm-4">Danh mục:</dt>
            <dd class="col-sm-8">@Model.Category?.Name</dd>
        </dl>
    </div>
</div>

@if (Model.Images != null && Model.Images.Any())
{
    <h4>Ảnh phụ</h4>
    <div class="row">
        @foreach (var image in Model.Images)
        {
            <div class="col-md-3 mb-3">
                <img src="@image.Url" alt="Ảnh phụ" class="img-thumbnail" />
            </div>
        }
    </div>
}

<a asp-action="Index" class="btn btn-secondary mt-3">Quay lại danh sách</a>
