@model IEnumerable<PhanVuBaoMinh.Models.Order>
@{
    ViewData["Title"] = "Quản Lý Đơn Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Quản Lý Đơn Hàng</h1>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Người Dùng</th>
            <th>Ngày Đặt</th>
            <th>Tổng Tiền</th>
            <th>Trạng Thái</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@(item.User != null ? $"{item.User.FirstName} {item.User.LastName}" : "N/A")</td> <!-- Hiển thị tên người dùng -->
                <td>@item.OrderDate.ToString("dd/MM/yyyy")</td>
                <td>@item.Total</td> <!-- Thay TotalAmount bằng Total -->
                <td>@item.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>